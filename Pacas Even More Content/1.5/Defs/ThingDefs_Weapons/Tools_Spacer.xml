<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!--============================================-->
	<!--PDA-->
	<ThingDef ParentName="PEMC_BaseTool">
		<defName>PEMC_Tool_PDA</defName>
		<label>pocket AI assistant</label>
		<description>A pocket-sized know-it-all who's smarter than you, but tactfully conceals it. He answers questions, calculates the depth of underground deposits, and sometimes pretends not to have heard your previous stupidity.</description>
		<graphicData>
			<texPath>Things/Weapons/Tools/PDA</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<stuffCategories>
			<li>StrongMetallic</li>
		</stuffCategories>
		<costStuffCount>45</costStuffCount>
		<costList>
			<Plastic>35</Plastic>
			<ReinforcedGlass>5</ReinforcedGlass>
			<ComponentAdvanced>5</ComponentAdvanced>
			<ElectronicComponents>5</ElectronicComponents>
			<Microchips>1</Microchips>
			<AIPersonaCore>1</AIPersonaCore>
		</costList>
		<statBases>
			<WorkToMake>25000</WorkToMake>
			<Bulk>0.5</Bulk>
			<Mass>0.5</Mass>
			<MeleeCounterParryBonus>0.1</MeleeCounterParryBonus>
            <ToolEffectivenessFactor>1</ToolEffectivenessFactor>
		</statBases>
		<equippedAngleOffset>-35</equippedAngleOffset>
		<techLevel>Spacer</techLevel>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>0.8,0.8</DrawSize>
			</li>
            <li Class="SurvivalToolsLite.SurvivalToolProperties">
                <baseWorkStatFactors>
                    <DeepDrillingSpeed>1.5</DeepDrillingSpeed>
                    <ResearchSpeed>1.5</ResearchSpeed>
                </baseWorkStatFactors>
				<toolWearFactor>0.2</toolWearFactor>
            </li>
		</modExtensions>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>body</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>0.1</power>
				<cooldownTime>3.25</cooldownTime>
				<chanceFactor>0.4</chanceFactor>
				<armorPenetrationBlunt>2</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
			</li>
		</tools>
		<thingCategories Inherit="False">
			<li>SurvivalToolsSpacer</li>
		</thingCategories>
		<recipeMaker>
			<recipeUsers>
				<li>TableElectronics</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
	<!--============================================-->
	<!--Pan-->
	<ThingDef ParentName="PEMC_BaseTool">
		<defName>PEMC_Tool_Pan</defName>
		<label>smart frying pan</label>
		<description>A self-important kitchen gadget that knows the temperature better than you. It fries eggs, tracks your health, and simultaneously reminds you of the calories after a double muffalo steak.</description>
		<graphicData>
			<texPath>Things/Weapons/Tools/Pan</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<stuffCategories>
			<li>StrongMetallic</li>
			<li>RuggedMetallic</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<WoodPlank>5</WoodPlank>
			<Glass>1</Glass>
			<Microchips>1</Microchips>
		</costList>
		<statBases>
			<WorkToMake>16000</WorkToMake>
			<Bulk>2</Bulk>
			<Mass>1.5</Mass>
			<MeleeCounterParryBonus>0.5</MeleeCounterParryBonus>
			<ToolEffectivenessFactor>1</ToolEffectivenessFactor>
		</statBases>
		<techLevel>Spacer</techLevel>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>0.8,0.8</DrawSize>
			</li>
			<li Class="SurvivalToolsLite.SurvivalToolProperties">
				<baseWorkStatFactors>
					<CookSpeed>1.5</CookSpeed>
					<FoodPoisonChance>0</FoodPoisonChance>
				</baseWorkStatFactors>
				<toolWearFactor>0.2</toolWearFactor>
			</li>
		</modExtensions>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>body</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.25</cooldownTime>
				<chanceFactor>0.4</chanceFactor>
				<armorPenetrationBlunt>3</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
			</li>
		</tools>
		<thingCategories Inherit="False">
			<li>SurvivalToolsSpacer</li>
		</thingCategories>
		<recipeMaker>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
</Defs>