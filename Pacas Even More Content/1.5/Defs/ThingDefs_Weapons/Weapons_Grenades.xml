<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ==================== Bases ========================== -->

<ThingDef ParentName="SK_BaseGrenadeProjectile">
    <defName>Proj_GrenadeWD40Liquid</defName>
    <label>Liquid lubricant WD-40</label>
    <graphicData>
        <texPath>Things/Projectile/Grenades/WD-40BR</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>0.5</drawSize>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
        <explosionRadius>3.5</explosionRadius>
        <damageDef>LubricantSpray</damageDef>
        <damageAmountBase>15</damageAmountBase>
        <preExplosionSpawnThingDef>Filth_Lubricant</preExplosionSpawnThingDef>
        <preExplosionSpawnChance>1</preExplosionSpawnChance>
        <postExplosionSpawnThingDef>Filth_Lubricant</postExplosionSpawnThingDef>
        <postExplosionSpawnChance>0.8</postExplosionSpawnChance>
        <ai_IsIncendiary>true</ai_IsIncendiary>
        <explosionDelay>15</explosionDelay>
        <dropsCasings>false</dropsCasings>
        <suppressionFactor>2.0</suppressionFactor>
        <dangerFactor>1.5</dangerFactor>
        <airborneSuppressionFactor>0.2</airborneSuppressionFactor>
    </projectile>
</ThingDef>
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseGrenadeEquipment">
		<defName>Weapon_GrenadeWD40Liquid</defName>
		<equipmentType>Primary</equipmentType>
		<label>Lubricant WD40 Liquid</label>
		<description>A crude imitation of the famous lubricant, cobbled together from whatever was available. It smells of oil, despair, and vague hope. However, in this godforsaken corner of the world, even worse would do.</description>
		<graphicData>
			<texPath>Things/Ammo/HandGrenades/WD40</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<onGroundRandomRotateAngle>0</onGroundRandomRotateAngle>
			<drawSize>(0.5)</drawSize>
		</graphicData>
		<soundInteract>Interact_Lubricant</soundInteract>
		<techLevel>Industrial</techLevel>
		<generateAllowChance>0.5</generateAllowChance>
		<generateCommonality>0.7</generateCommonality>
		<statBases>
			<Mass>0.5</Mass>
			<Bulk>1.0</Bulk>
			<MarketValue>15</MarketValue>
			<SightsEfficiency>0.35</SightsEfficiency>
			<RangedWeapon_Cooldown>0.65</RangedWeapon_Cooldown>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.01</MoveSpeed>
			<WorkSpeedGlobal>-0.01</WorkSpeedGlobal>
		</equippedStatOffsets>
		<weaponTags>
			<li>GrenadeDestructive</li>
			<li>GrenadeTierTwo</li>
			<li>CE_AI_Grenade</li>
			<li>CE_AI_AOE</li>
		</weaponTags>
		<thingCategories>
			<li>Grenades</li>
		</thingCategories>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<label>throw WD40</label>
				<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>11</range>
				<minRange>2</minRange>
				<warmupTime>1.3</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>ThrowLubricant</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Proj_GrenadeWD40Liquid</defaultProjectile>
				<onlyManualCast>true</onlyManualCast>
				<ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
			</li>
		</verbs>
		<detonateProjectile>Proj_GrenadeWD40Liquid</detonateProjectile>
		<smeltProducts>
			<Glass>3</Glass>
			<Cloth>3</Cloth>
			<Napalm>1</Napalm>
		</smeltProducts>
		<rotateInShelves>false</rotateInShelves>
	</ThingDef>


</Defs>
